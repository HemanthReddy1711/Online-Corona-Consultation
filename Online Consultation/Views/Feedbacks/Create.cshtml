@using Online_Consultation
@model Online_Consultation.Models.Feedback
@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <h2 style="color:mediumpurple">
        Give FeedBack
    </h2>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>

        <div class="form-group row">
            <div class=",col-2">
                <label asp-for="rating"></label>
            </div>
            <div class="col-5">
                <input asp-for="rating" type="number" max="5" class="form-control" id="validationCustom05" required/>
                <div class="invalid-feedback">
                    Please give input
                </div>
            </div>
            <span asp-validation-for="rating" class="text-danger"></span>
            
        </div>
        <div class="form-group row">
            <div class=",col-2">
                <label asp-for="description"></label>
            </div>
            <div class="col-5">
                <input asp-for="description" type="text"  class="form-control" id="validationCustom05" required/>
                <div class="invalid-feedback">
                    Please give input
                </div>
            </div>
            <span asp-validation-for="description" class="text-danger"></span>
        </div>
        <input type="hidden" hidden asp-for="pid"/>
        <input type="hidden" hidden asp-for="did" />
        <br />
        <div class="form-group">
            <input class="btn btn-primary" value="submit" type="submit"/>
            <a asp-action="MyAppointments" asp-controller="Home" class="btn btn-success"> Back to Appoinments</a>
        </div>
    </div>
</form>
</div>

