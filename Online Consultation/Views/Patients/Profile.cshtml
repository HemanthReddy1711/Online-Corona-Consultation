@using Online_Consultation
@model Online_Consultation.Models.PatientProfile
@{
    ViewData["Title"] = "Profile";
}

<section class="section about-section gray-bg" id="about">
            <div class="container">
                <div class="row align-items-center flex-row-reverse">
                    <div class="col-lg-6">
                        <div class="about-text go-to">
                            <div class="row about-list">
                                <div class="col-md-6">
                                    <div class="media">
                                        <label>Name</label>
                                        <input asp-for="pname" class="form-control" id="validationCustom05" required/>
                                    </div>
                                    <div class="media">
                                        <label>Mobile</label>
                                        <input asp-for="Mobile" class="form-control" id="validationCustom05" required/>
                                    </div>
                                    <div class="media">
                                        <label>Residence</label>
                                        <input asp-for="India" class="form-control" id="validationCustom05" required/>
                                    </div>
                                    <div class="media">
                                        <label>Address</label>
                                        <input asp-for="address" class="form-control" id="validationCustom05" required/>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="media">
                                        <label>E-mail</label>
                                        <input asp-for="Email" class="form-control" id="validationCustom05" required/>
                                    </div>
                                    <div class="button">
                                        <input type="submit"/>
                                        <input type="submit"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="about-avatar">
                            <img src="~/img/doc1.jpg" class="rounded-circle"  width="50%" title="" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </section>

